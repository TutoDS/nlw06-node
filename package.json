{
	"name": "nlw06-node",
	"version": "1.0.0",
	"license": "MIT",
	"author": {
		"name": "Daniel Sousa @TutoDS",
		"url": "https://github.com/TutoDS"
	},
	"scripts": {
		"dev": "nodemon -r tsconfig-paths/register --config nodemon.json src/server.ts",
		"format": "prettier -w .",
		"lint": "eslint . --ext .ts --ext .js"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"express": "^4.17.1"
	},
	"devDependencies": {
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.12",
		"@types/node": "^15.12.4",
		"@typescript-eslint/eslint-plugin": "^4.27.0",
		"@typescript-eslint/parser": "^4.27.0",
		"dotenv": "^10.0.0",
		"eslint": "^7.29.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "1.0.0-rc.13",
		"lint-staged": "^11.0.0",
		"nodemon": "^2.0.7",
		"prettier": "^2.3.1",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.3.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "echo \"———› START Prettier ‹———\" && lint-staged && git add . && echo \"———› Prettier ✅ ‹——— \"",
			"pre-push": "echo \"———› START ESLint ‹———\" && --ext .ts --ext .js && echo \"———› ESLint ✅ ‹———\""
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write"
		]
	}
}
